<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Vorhandene Services beibehalten -->
        <service id="HeroBlocks\Service\LicenseCheckService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="plugin.repository"/>
            <argument type="service" id="Symfony\Contracts\HttpClient\HttpClientInterface"/>
        </service>
        
        <service id="HeroBlocks\Storefront\Twig\LicenseCheckExtension">
            <argument type="service" id="HeroBlocks\Service\LicenseCheckService"/>
            <tag name="twig.extension"/>
        </service>
        
        <service id="HeroBlocks\Service\UpdateCheckService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="plugin.repository"/>
            <argument type="service" id="http_client"/>
        </service>
        
        <service id="HeroBlocks\Service\InstagramTokenCheckService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="http_client"/>
        </service>
        
        <service id="HeroBlocks\Controller\Admin\LicenseCheckController" public="true">
            <argument type="service" id="HeroBlocks\Service\LicenseCheckService"/>
            <argument type="service" id="HeroBlocks\Service\InstagramTokenCheckService"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
            <argument type="service" id="user.repository"/>
            <tag name="controller.service_arguments"/>
            <tag name="container.service_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="HeroBlocks\Controller\Admin\UpdateCheckController" public="true">
            <argument type="service" id="HeroBlocks\Service\UpdateCheckService"/>
            <tag name="controller.service_arguments"/>
            <tag name="container.service_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="HeroBlocks\Controller\Admin\UpdateDownloadController" public="true">
            <argument type="service" id="HeroBlocks\Service\UpdateCheckService"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Framework\Plugin\PluginManagementService"/>
            <argument type="service" id="Shopware\Core\Framework\Plugin\PluginService"/>
            <argument type="service" id="Shopware\Core\Framework\Plugin\PluginLifecycleService"/>
            <argument type="service" id="plugin.repository"/>
            <argument type="service" id="http_client"/>
            <argument type="service" id="logger"/>
            <tag name="controller.service_arguments"/>
            <tag name="container.service_subscriber"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
        
        <service id="HeroBlocks\Content\Cms\TypeDataResolver\HeroSliderTypeDataResolver">
            <argument type="service" id="Shopware\Storefront\Page\Cms\DefaultMediaResolver"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>
        
        <service id="HeroBlocks\Content\Cms\TypeDataResolver\CategorySliderTypeDataResolver">
            <tag name="shopware.cms.data_resolver"/>
        </service>
        
        <service id="HeroBlocks\Content\Cms\TypeDataResolver\InstagramFeedTypeDataResolver">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="shopware.cms.data_resolver"/>
        </service>
        
        <service id="HeroBlocks\Storefront\Twig\NavigationExtension">
            <argument type="service" id="Shopware\Core\Content\Category\Service\NavigationLoader"/>
            <tag name="twig.extension"/>
        </service>
        
        <service id="HeroBlocks\Storefront\Twig\MediaUrlExtension">
            <argument type="service" id="media.repository"/>
            <tag name="twig.extension"/>
        </service>

        <service id="HeroBlocks\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        
        <service id="HeroBlocks\Storefront\Twig\FaqExtension">
            <argument type="service" id="HeroBlocks\Service\ConfigService"/>
            <tag name="twig.extension"/>
        </service>
        
        <!-- Scheduled Task: License Expiry Reminder -->
        <service id="HeroBlocks\ScheduledTask\LicenseExpiryReminderTask">
            <tag name="shopware.scheduled.task"/>
        </service>
        
        <service id="HeroBlocks\ScheduledTask\LicenseExpiryReminderTaskHandler" public="true">
            <argument type="service" id="scheduled_task.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="Shopware\Core\Content\Mail\Service\MailService"/>
            <argument type="service" id="logger"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>