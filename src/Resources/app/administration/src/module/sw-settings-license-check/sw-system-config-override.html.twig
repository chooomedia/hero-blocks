            v-if="isHeroBlocksConfig() && index === 1 && isMegaMenuEnabled" 
            :expand-on-loading="false" 
            ref="megaMenuCardCollapse"
        >
            <template #header="{ expanded }">
                {# Header wie mt-card Header - Design identisch zu Standard Cards, gleiche Breite #}
