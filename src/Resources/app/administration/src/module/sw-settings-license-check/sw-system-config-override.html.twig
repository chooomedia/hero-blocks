                    </mt-button>
                </div>
            
            <slot name="card-element-last"></slot>
        </template>
        <slot
            name="afterElements"
            v-bind="{ card, config: actualConfigData[currentSalesChannelId], index, isNotDefaultSalesChannel, inheritance: actualConfigData.null }"
        >
        </slot>
    </mt-card>
            </template>
        </sw-collapse>
        
