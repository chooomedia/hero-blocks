{% block sw_cms_block_config_hero_image_overlay %}
<div class="sw-cms-block-config-hero-image-overlay" v-if="block && block.customFields">
    
    {# ============================================================================ #}
    {# POSITION SETTINGS (NICHT ÜBERSETZBAR - in block.customFields) #}
    {# ============================================================================ #}
    <div class="sw-cms-block-config-hero-image-overlay__section">
        <h4 class="sw-cms-block-config-hero-image-overlay__section-title">
            {{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.sectionPosition') }}
        </h4>
        
        {# Overlay Position (6 Positionen) - WICHTIG: mt-select für Shopware 6.7+ #}
        <mt-select
            :model-value="overlayPosition"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayPosition')"
            :options="positionOptions"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayPositionHelp')"
            @update:model-value="onPositionChange"
        />
    </div>
    
    {# ============================================================================ #}
    {# CONTENT SETTINGS (SPRACHABHÄNGIG - im textOverlay Element-Slot) #}
    {# ============================================================================ #}
    <div class="sw-cms-block-config-hero-image-overlay__section">
        <h4 class="sw-cms-block-config-hero-image-overlay__section-title">
            {{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.sectionContent') }}
        </h4>
        
        {# Info-Box für sprachabhängige Inhalte #}
        <div class="sw-cms-block-config-hero-image-overlay__language-info">
            <sw-icon name="regular-info-circle" size="16px" />
            <span>{{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.languageInfo') }}</span>
        </div>
        
        {# Overlay Content - SPRACHABHÄNGIG (wird im Element-Slot gespeichert) #}
        {# Verwende den Standard text-Editor mit HTML-Unterstützung #}
        {# Die Headline kann als <h2> im HTML definiert werden #}
        <sw-text-editor
            :value="overlayContent"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayContent')"
            :placeholder="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayContentPlaceholder')"
            :sanitize-input="false"
            :sanitize-field-value="false"
            :allow-inline-data-mapping="false"
            :is-inline-edit="false"
            @update:value="onOverlayContentChange"
        />
    </div>
    
    {# ============================================================================ #}
    {# STYLE SETTINGS (NICHT ÜBERSETZBAR - in block.customFields) #}
    {# ============================================================================ #}
    <div class="sw-cms-block-config-hero-image-overlay__section">
        <h4 class="sw-cms-block-config-hero-image-overlay__section-title">
            {{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.sectionStyle') }}
        </h4>
        
        {# Overlay Background Color #}
        <sw-colorpicker
            :value="overlayBackgroundColor"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayBackgroundColor')"
            :helpText="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayBackgroundColorHelp')"
            :colorOutput="'hex'"
            @update:value="onBackgroundColorChange"
        />
        
        {# Overlay Text Color (Default: white) #}
        <sw-colorpicker
            :value="overlayTextColor"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayTextColor')"
            :helpText="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.overlayTextColorHelp')"
            :colorOutput="'hex'"
            @update:value="onTextColorChange"
        />
        
        {# Minimum Height #}
        <mt-text-field
            :model-value="minHeight"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.minHeight')"
            :placeholder="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.minHeightPlaceholder')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.minHeightHelp')"
            @update:model-value="(value) => updateCustomField('minHeight', value)"
        />
    </div>
    
    {# ============================================================================ #}
    {# IMAGE ALIGNMENT SETTINGS (nur bei Cover Display Mode) #}
    {# ============================================================================ #}
    <div class="sw-cms-block-config-hero-image-overlay__section" v-if="isCoverMode">
        <h4 class="sw-cms-block-config-hero-image-overlay__section-title">
            {{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.sectionImageAlign') }}
        </h4>
        
        {# Info-Box für Bild-Ausrichtung #}
        <div class="sw-cms-block-config-hero-image-overlay__info">
            <sw-icon name="regular-info-circle" size="16px" />
            <span>{{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.imageAlignInfo') }}</span>
        </div>
        
        {# Vertical Alignment #}
        <mt-select
            :model-value="imageVerticalAlign"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.imageVerticalAlign')"
            :options="imageVerticalAlignOptions"
            @update:model-value="(value) => updateCustomField('imageVerticalAlign', value)"
        />
        
        {# Horizontal Alignment #}
        <mt-select
            :model-value="imageHorizontalAlign"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.imageHorizontalAlign')"
            :options="imageHorizontalAlignOptions"
            @update:model-value="(value) => updateCustomField('imageHorizontalAlign', value)"
        />
    </div>
    
    {# ============================================================================ #}
    {# ANIMATION SETTINGS (NICHT ÜBERSETZBAR - in block.customFields) #}
    {# ============================================================================ #}
    <div class="sw-cms-block-config-hero-image-overlay__section">
        <h4 class="sw-cms-block-config-hero-image-overlay__section-title">
            {{ $tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.sectionAnimation') }}
        </h4>
        
        {# Enable Scroll Animation #}
        <mt-switch
            :model-value="enableScrollAnimation"
            :label="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.enableScrollAnimation')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroImageOverlay.config.enableScrollAnimationHelp')"
            @update:model-value="onScrollAnimationChange"
        />
    </div>
    
</div>
{% endblock %}
