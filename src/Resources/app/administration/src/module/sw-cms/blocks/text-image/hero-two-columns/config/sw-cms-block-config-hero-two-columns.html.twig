{% block sw_cms_block_config_hero_two_columns %}
<div class="sw-cms-block-config-hero-two-columns" v-if="block && block.customFields">
    {# WICHTIG: Block-Config wird in block.customFields gespeichert (NICHT block.config!) #}
    
    {# ==================== LAYOUT SECTION ==================== #}
    <div class="sw-cms-block-config-section">
        <h4 class="sw-cms-block-config-section__title">
            <sw-icon name="regular-objects-column" size="16px" />
            Layout
        </h4>
        
        {# Layout Selection (Mobile - Fallback) #}
        {% block sw_cms_block_config_hero_two_columns_layout %}
        <mt-select
            :model-value="block.customFields?.layout || 'image-left'"
            :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.layout.label')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.layout.helpText')"
            :options="layoutOptions"
            @update:model-value="onLayoutChange"
        />
        {% endblock %}

    {# Layout Desktop Selection #}
    {% block sw_cms_block_config_hero_two_columns_layout_desktop %}
    <mt-select
        :model-value="block.customFields?.layoutDesktop || block.customFields?.layout || 'image-left'"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.layoutDesktop.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.layoutDesktop.helpText')"
        :options="layoutOptions"
        @update:model-value="onLayoutDesktopChange"
    />
    {% endblock %}

    {# Layout Tablet Selection #}
    {% block sw_cms_block_config_hero_two_columns_layout_tablet %}
    <mt-select
        :model-value="block.customFields?.layoutTablet || block.customFields?.layout || 'image-left'"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.layoutTablet.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.layoutTablet.helpText')"
        :options="layoutOptions"
        @update:model-value="onLayoutTabletChange"
    />
    {% endblock %}
    </div>
    
    {# Divider #}
    <hr class="sw-cms-block-config-divider" />
    
    {# ==================== BACKGROUND SECTION ==================== #}
    <div class="sw-cms-block-config-section">
        <h4 class="sw-cms-block-config-section__title">
            <sw-icon name="regular-image" size="16px" />
            Hintergrund
        </h4>
        
        {# Background Mode Selection #}
    {% block sw_cms_block_config_hero_two_columns_background_mode %}
    <mt-select
        :model-value="block.customFields?.backgroundMode || 'none'"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundMode.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundMode.helpText')"
        :options="backgroundModeOptions"
        @update:model-value="onBackgroundModeChange"
    />
    {% endblock %}
    
    {# Background Image (Single) #}
    {% block sw_cms_block_config_hero_two_columns_background_image %}
    <sw-media-compact-upload-v2
        v-if="(block.customFields?.backgroundMode || 'none') === 'single'"
        :source="block.customFields?.backgroundImage ? { id: block.customFields.backgroundImage } : null"
        :upload-tag="uploadTagBackground"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundImage.label')"
        :default-folder="cmsPageState?.pageEntityName || 'cms_page'"
        :allow-multi-select="false"
        @media-upload-remove-image="onRemoveBackgroundImage"
        @selection-change="onSetBackgroundImage"
    />
    <sw-upload-listener
        v-if="(block.customFields?.backgroundMode || 'none') === 'single'"
        :upload-tag="uploadTagBackground"
        auto-upload
        @media-upload-finish="onBackgroundImageUpload"
    />
    {% endblock %}
    
    {# Background Left - Toggle: Image oder CSS Code #}
    {% block sw_cms_block_config_hero_two_columns_background_left_toggle %}
    <sw-switch-field
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images'"
        :model-value="block.customFields?.backgroundLeftUseCss || false"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundLeftUseCss.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundLeftUseCss.helpText')"
        @update:model-value="onBackgroundLeftUseCssChange"
    />
    {% endblock %}
    
    {# Background Image Left (Two Images) #}
    {% block sw_cms_block_config_hero_two_columns_background_image_left %}
    <sw-media-compact-upload-v2
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images' && !block.customFields?.backgroundLeftUseCss"
        :source="block.customFields?.backgroundImageLeft ? { id: block.customFields.backgroundImageLeft } : null"
        :upload-tag="uploadTagBackgroundLeft"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundImageLeft.label')"
        :default-folder="cmsPageState?.pageEntityName || 'cms_page'"
        :allow-multi-select="false"
        @media-upload-remove-image="onRemoveBackgroundImageLeft"
        @selection-change="onSetBackgroundImageLeft"
    />
    <sw-upload-listener
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images' && !block.customFields?.backgroundLeftUseCss"
        :upload-tag="uploadTagBackgroundLeft"
        auto-upload
        @media-upload-finish="onBackgroundImageLeftUpload"
    />
    {% endblock %}
    
    {# Background CSS Code Left (Two Images) #}
    {% block sw_cms_block_config_hero_two_columns_background_css_left %}
    <sw-code-editor
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images' && block.customFields?.backgroundLeftUseCss"
        :value="block.customFields?.backgroundLeftCss || defaultBackgroundLeftCss"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundLeftCss.label')"
        :editor-config="{ mode: 'css' }"
        @update:value="onBackgroundLeftCssChange"
        @blur="onBackgroundLeftCssChange"
    />
    {% endblock %}
    
    {# Background Right - Toggle: Image oder CSS Code #}
    {% block sw_cms_block_config_hero_two_columns_background_right_toggle %}
    <sw-switch-field
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images'"
        :model-value="block.customFields?.backgroundRightUseCss || false"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundRightUseCss.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundRightUseCss.helpText')"
        @update:model-value="onBackgroundRightUseCssChange"
    />
    {% endblock %}
    
    {# Background Image Right (Two Images) #}
    {% block sw_cms_block_config_hero_two_columns_background_image_right %}
    <sw-media-compact-upload-v2
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images' && !block.customFields?.backgroundRightUseCss"
        :source="block.customFields?.backgroundImageRight ? { id: block.customFields.backgroundImageRight } : null"
        :upload-tag="uploadTagBackgroundRight"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundImageRight.label')"
        :default-folder="cmsPageState?.pageEntityName || 'cms_page'"
        :allow-multi-select="false"
        @media-upload-remove-image="onRemoveBackgroundImageRight"
        @selection-change="onSetBackgroundImageRight"
    />
    <sw-upload-listener
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images' && !block.customFields?.backgroundRightUseCss"
        :upload-tag="uploadTagBackgroundRight"
        auto-upload
        @media-upload-finish="onBackgroundImageRightUpload"
    />
    {% endblock %}
    
    {# Background CSS Code Right (Two Images) #}
    {% block sw_cms_block_config_hero_two_columns_background_css_right %}
    <sw-code-editor
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images' && block.customFields?.backgroundRightUseCss"
        :value="block.customFields?.backgroundRightCss || defaultBackgroundRightCss"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.backgroundRightCss.label')"
        :editor-config="{ mode: 'css' }"
        @update:value="onBackgroundRightCssChange"
        @blur="onBackgroundRightCssChange"
    />
    {% endblock %}
    
    {# Scroll Animation Angle #}
    {% block sw_cms_block_config_hero_two_columns_scroll_angle %}
    <mt-text-field
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images'"
        :model-value="block.customFields?.scrollAnimationAngle || '33'"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.scrollAnimationAngle.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.scrollAnimationAngle.helpText')"
        placeholder="33"
        type="number"
        @update:model-value="onScrollAnimationAngleChange"
    />
    {% endblock %}
    
    {# Scroll Animation Enabled #}
    {% block sw_cms_block_config_hero_two_columns_scroll_animation_enabled %}
    <sw-switch-field
        v-if="(block.customFields?.backgroundMode || 'none') === 'two-images'"
        :model-value="block.customFields?.scrollAnimationEnabled !== false"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.scrollAnimationEnabled.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.scrollAnimationEnabled.helpText')"
        @update:model-value="onScrollAnimationEnabledChange"
    />
    {% endblock %}
    
    {# Min Height #}
    {% block sw_cms_block_config_hero_two_columns_min_height %}
    <mt-text-field
        :model-value="block.customFields?.minHeight || ''"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.minHeight.label')"
        :placeholder="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.minHeight.placeholder')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.minHeight.helpText')"
        @update:model-value="onMinHeightChange"
    />
    {% endblock %}
    
    {# CSS Classes - Bootstrap Spacing Classes #}
    {% block sw_cms_block_config_hero_two_columns_css_class %}
    <mt-text-field
        :model-value="block.cssClass"
        :label="$tc('sw-cms.detail.label.cssClassField')"
        :help-text="$tc('sw-cms.detail.helpText.cssClassField') + ' (z.B. p-3, m-4, mb-5)'"
        @update:model-value="onCssClassChange"
    />
    {% endblock %}
    
    {# Audio File #}
    {% block sw_cms_block_config_hero_two_columns_audio %}
    <sw-media-compact-upload-v2
        :source="block.customFields?.audioFile ? { id: block.customFields.audioFile } : null"
        :upload-tag="uploadTagAudio"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.audioFile.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.audioFile.helpText')"
        :default-folder="cmsPageState?.pageEntityName || 'cms_page'"
        :allow-multi-select="false"
        :file-accept="'audio/*'"
        @media-upload-remove-image="onRemoveAudioFile"
        @selection-change="onSetAudioFile"
    />
    <sw-upload-listener
        :upload-tag="uploadTagAudio"
        auto-upload
        @media-upload-finish="onAudioFileUpload"
    />
    {% endblock %}
    </div>
    
    {# Divider #}
    <hr class="sw-cms-block-config-divider" />
    
    {# ==================== ELEMENT POSITIONING SECTION ==================== #}
    <div class="sw-cms-block-config-section">
        <h4 class="sw-cms-block-config-section__title">
            <sw-icon name="regular-cursor-move" size="16px" />
            Element-Positionierung
        </h4>
        
        {# Element Positionierung - Left Slot #}
    {% block sw_cms_block_config_hero_two_columns_element_left %}
    <sw-container columns="repeat(auto-fit, minmax(250px, 1fr))" gap="0 30px">
        <mt-text-field
            :model-value="block.customFields?.elementLeftTranslateX || '0'"
            :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftTranslateX.label')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftTranslateX.helpText')"
            placeholder="0"
            type="number"
            @update:model-value="onElementLeftTranslateXChange"
        />
        <mt-text-field
            :model-value="block.customFields?.elementLeftTranslateY || '0'"
            :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftTranslateY.label')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftTranslateY.helpText')"
            placeholder="0"
            type="number"
            @update:model-value="onElementLeftTranslateYChange"
        />
    </sw-container>
    <sw-switch-field
        :model-value="block.customFields?.elementLeftAnimate || false"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftAnimate.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftAnimate.helpText')"
        @update:model-value="onElementLeftAnimateChange"
    />
    {# Custom CSS für Left Element Wrapper #}
    <sw-code-editor
        :value="block.customFields?.elementLeftCss || ''"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftCss.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementLeftCss.helpText')"
        :editor-config="{ mode: 'css' }"
        @update:value="onElementLeftCssChange"
        @blur="onElementLeftCssChange"
    />
    {# Custom CSS für Image Container (Left) #}
    <sw-code-editor
        :value="block.customFields?.imageContainerLeftCss || ''"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.imageContainerLeftCss.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.imageContainerLeftCss.helpText')"
        :editor-config="{ mode: 'css' }"
        @update:value="onImageContainerLeftCssChange"
        @blur="onImageContainerLeftCssChange"
    />
    {% endblock %}
    
    {# Element Positionierung - Right Slot #}
    {% block sw_cms_block_config_hero_two_columns_element_right %}
    <sw-container columns="repeat(auto-fit, minmax(250px, 1fr))" gap="0 30px">
        <mt-text-field
            :model-value="block.customFields?.elementRightTranslateX || '0'"
            :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightTranslateX.label')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightTranslateX.helpText')"
            placeholder="0"
            type="number"
            @update:model-value="onElementRightTranslateXChange"
        />
        <mt-text-field
            :model-value="block.customFields?.elementRightTranslateY || '0'"
            :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightTranslateY.label')"
            :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightTranslateY.helpText')"
            placeholder="0"
            type="number"
            @update:model-value="onElementRightTranslateYChange"
        />
    </sw-container>
    <sw-switch-field
        :model-value="block.customFields?.elementRightAnimate || false"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightAnimate.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightAnimate.helpText')"
        @update:model-value="onElementRightAnimateChange"
    />
    {# Custom CSS für Right Element Wrapper #}
    <sw-code-editor
        :value="block.customFields?.elementRightCss || ''"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightCss.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.elementRightCss.helpText')"
        :editor-config="{ mode: 'css' }"
        @update:value="onElementRightCssChange"
        @blur="onElementRightCssChange"
    />
    {# Custom CSS für Image Container (Right) #}
    <sw-code-editor
        :value="block.customFields?.imageContainerRightCss || ''"
        :label="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.imageContainerRightCss.label')"
        :help-text="$tc('sw-cms.blocks.heroBlocks.heroTwoColumns.config.imageContainerRightCss.helpText')"
        :editor-config="{ mode: 'css' }"
        @update:value="onImageContainerRightCssChange"
        @blur="onImageContainerRightCssChange"
    />
    {% endblock %}
    </div>
    
    {# Divider #}
    <hr class="sw-cms-block-config-divider" />
    
    {# ==================== SPACING SECTION ==================== #}
    <div class="sw-cms-block-config-section">
        <h4 class="sw-cms-block-config-section__title">
            <sw-icon name="regular-expand" size="16px" />
            Abstände
        </h4>
        
        {# Margin/Padding Fields #}
    {% block sw_cms_block_config_hero_two_columns_spacing %}
    <mt-text-field
        :model-value="block.marginTop"
        :label="$tc('sw-cms.detail.label.blockTopMarginField')"
        placeholder="z.B. 20px, 2rem, 0"
        @update:model-value="(value) => onMarginChange(value, 'marginTop')"
    />
    
    <mt-text-field
        :model-value="block.marginBottom"
        :label="$tc('sw-cms.detail.label.blockBottomMarginField')"
        placeholder="z.B. 20px, 2rem, 0"
        @update:model-value="(value) => onMarginChange(value, 'marginBottom')"
    />
    
    <mt-text-field
        :model-value="block.marginLeft"
        :label="$tc('sw-cms.detail.label.blockLeftMarginField')"
        placeholder="z.B. 20px, 2rem, 0"
        @update:model-value="(value) => onMarginChange(value, 'marginLeft')"
    />
    
    <mt-text-field
        :model-value="block.marginRight"
        :label="$tc('sw-cms.detail.label.blockRightMarginField')"
        placeholder="z.B. 20px, 2rem, 0"
        @update:model-value="(value) => onMarginChange(value, 'marginRight')"
    />
    {% endblock %}
    </div>
</div>
{% endblock %}

