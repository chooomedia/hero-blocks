{% block sw_cms_el_config_hero_product_landing %}
<div class="sw-cms-el-config-hero-product-landing">

    {# ==================== PRODUCT SELECTION ==================== #}
    <sw-container columns="1fr" gap="16px">
        
        {# Product Picker - WICHTIG: Hauptelement f√ºr Landing Page Produkt-Auswahl #}
        <sw-entity-single-select
            :label="$tc('sw-cms.elements.heroProductLanding.config.product.label')"
            :placeholder="$tc('sw-cms.elements.heroProductLanding.config.product.placeholder')"
            entity="product"
            :value="productId"
            :criteria="productCriteria"
            label-property="name"
            @update:value="onProductChange"
            @search-term-change="onProductSearchTermChange"
        >
            {# Custom Result Template with Product Image #}
            <template #result-item="{ item, index, labelProperty, searchTerm, highlightSearchTerm, isSelected, setValue, getKey }">
                <li
                    class="sw-select-result"
                    :class="{ 'is--active': isSelected }"
                    @click.stop="setValue(item)"
                >
                    <sw-product-variant-info :variations="item.options">
                        <div class="sw-cms-el-config-hero-product-landing__product-result">
                            <sw-media-preview-v2
                                v-if="item.cover && item.cover.media"
                                :source="item.cover.media"
                                class="sw-cms-el-config-hero-product-landing__product-image"
                            />
                            <div class="sw-cms-el-config-hero-product-landing__product-info">
                                <span class="sw-cms-el-config-hero-product-landing__product-name">
                                    {{ item.translated ? item.translated.name : item.name }}
                                </span>
                                <span class="sw-cms-el-config-hero-product-landing__product-number">
                                    {{ item.productNumber }}
                                </span>
                            </div>
                        </div>
                    </sw-product-variant-info>
                </li>
            </template>
        </sw-entity-single-select>

        {# Help Text #}
        <sw-help-text
            :text="$tc('sw-cms.elements.heroProductLanding.config.product.helpText')"
        />

    </sw-container>

    {# ==================== BASIC DISPLAY OPTIONS ==================== #}
    <sw-container columns="1fr" gap="16px" class="sw-cms-el-config-hero-product-landing__display-options">
        
        <h4>{{ $tc('sw-cms.elements.heroProductLanding.config.displayOptions.title') }}</h4>

        {# Show Name #}
        <sw-switch-field
            :model-value="showName"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showName.label')"
            @update:model-value="(value) => showName = value"
        />

        {# Show Description #}
        <sw-switch-field
            :model-value="showDescription"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showDescription.label')"
            @update:model-value="(value) => showDescription = value"
        />

        {# Show Price #}
        <sw-switch-field
            :model-value="showPrice"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showPrice.label')"
            @update:model-value="(value) => showPrice = value"
        />

        {# Show Properties (Technical Specs) #}
        <sw-switch-field
            :model-value="showProperties"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showProperties.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showProperties.helpText')"
            @update:model-value="(value) => showProperties = value"
        />

        {# Show Manufacturer #}
        <sw-switch-field
            :model-value="showManufacturer"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showManufacturer.label')"
            @update:model-value="(value) => showManufacturer = value"
        />

        {# Show Buy Button #}
        <sw-switch-field
            :model-value="showBuyButton"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showBuyButton.label')"
            @update:model-value="(value) => showBuyButton = value"
        />

    </sw-container>

    {# ==================== CUSTOM FIELDS & ADDITIONAL DATA ==================== #}
    <sw-container columns="1fr" gap="16px" class="sw-cms-el-config-hero-product-landing__custom-fields-options">
        
        <h4>{{ $tc('sw-cms.elements.heroProductLanding.config.customFieldsOptions.title') }}</h4>
        
        <p class="sw-cms-el-config-hero-product-landing__hint">
            {{ $tc('sw-cms.elements.heroProductLanding.config.customFieldsOptions.hint') }}
        </p>

        {# Show Custom Fields #}
        <sw-switch-field
            :model-value="showCustomFields"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showCustomFields.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showCustomFields.helpText')"
            @update:model-value="(value) => showCustomFields = value"
        />

        {# Show Tagline (Custom Field) #}
        <sw-switch-field
            :model-value="showTagline"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showTagline.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showTagline.helpText')"
            @update:model-value="(value) => showTagline = value"
        />

        {# Show Badge (Custom Field) #}
        <sw-switch-field
            :model-value="showBadge"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showBadge.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showBadge.helpText')"
            @update:model-value="(value) => showBadge = value"
        />

        {# Show Specs Highlight #}
        <sw-switch-field
            :model-value="showSpecs"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showSpecs.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showSpecs.helpText')"
            @update:model-value="(value) => showSpecs = value"
        />

        {# Show Variants/Options #}
        <sw-switch-field
            :model-value="showVariants"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showVariants.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showVariants.helpText')"
            @update:model-value="(value) => showVariants = value"
        />

        {# Show Gallery #}
        <sw-switch-field
            :model-value="showGallery"
            :label="$tc('sw-cms.elements.heroProductLanding.config.showGallery.label')"
            :helpText="$tc('sw-cms.elements.heroProductLanding.config.showGallery.helpText')"
            @update:model-value="(value) => showGallery = value"
        />

    </sw-container>

    {# ==================== LAYOUT OPTIONS ==================== #}
    <sw-container columns="1fr" gap="16px" class="sw-cms-el-config-hero-product-landing__layout-options">
        
        <h4>{{ $tc('sw-cms.elements.heroProductLanding.config.layoutOptions.title') }}</h4>

        {# Layout Select #}
        <sw-single-select
            :model-value="layout"
            :label="$tc('sw-cms.elements.heroProductLanding.config.layout.label')"
            :options="layoutOptions"
            @update:model-value="(value) => layout = value"
        />

    </sw-container>

    {# ==================== AVAILABLE CUSTOM FIELDS INFO ==================== #}
    <sw-container columns="1fr" gap="8px" class="sw-cms-el-config-hero-product-landing__info-box">
        
        <div class="sw-cms-el-config-hero-product-landing__info-header">
            <sw-icon name="regular-info-circle-s" small />
            <span>{{ $tc('sw-cms.elements.heroProductLanding.config.availableData.title') }}</span>
        </div>
        
        <div class="sw-cms-el-config-hero-product-landing__info-content">
            <p class="sw-cms-el-config-hero-product-landing__info-text">
                {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.description') }}
            </p>
            
            <ul class="sw-cms-el-config-hero-product-landing__info-list">
                <li><code>custom_horex_tagline</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.tagline') }}</li>
                <li><code>custom_horex_badge_text</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.badge') }}</li>
                <li><code>custom_horex_specs_highlight</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.specsHighlight') }}</li>
                <li><code>custom_horex_specs_short</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.specsShort') }}</li>
                <li><code>custom_horex_video_url</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.videoUrl') }}</li>
                <li><code>custom_horex_cta_text</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.ctaText') }}</li>
                <li><code>custom_horex_cta_url</code> - {{ $tc('sw-cms.elements.heroProductLanding.config.availableData.ctaUrl') }}</li>
            </ul>
        </div>
        
    </sw-container>

</div>
{% endblock %}
