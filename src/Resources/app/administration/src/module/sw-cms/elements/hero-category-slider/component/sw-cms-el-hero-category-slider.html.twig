{% block sw_cms_el_category_slider %}
<div class="sw-cms-el-hero-category-slider">
    {# V3.0 - Reaktive Preview f√ºr Slide-Management (1-4 Slides nebeneinander) #}
    <div class="sw-cms-el-hero-category-slider__preview" v-if="hasSlides" :class="{ 'is-single-image': imageCount === '1', 'is-double-image': imageCount === '2', 'is-triple-image': imageCount === '3', 'is-quad-image': imageCount === '4' }">
        {# Slider Preview - Dynamisch 1-4 Slides (REAKTIV auf imageCount & categorySlides) #}
        <div class="sw-cms-el-hero-category-slider__preview-slider">
            <template v-for="(previewImg, index) in previewImages" :key="`preview-${index}-${renderCount}`">
                <div class="sw-cms-el-hero-category-slider__preview-slide">
                    {# Slide Title (Custom Title oder Category Name) #}
                    <div class="sw-cms-el-hero-category-slider__preview-slide-title">
                        {{ previewImg.title }}
                        <span v-if="!previewImg.isReal" class="sw-cms-el-hero-category-slider__preview-slide-badge">(Preview)</span>
                    </div>
                    <img
                        :src="previewImg.url"
                        :alt="previewImg.title"
                        class="sw-cms-el-hero-category-slider__preview-image"
                    >
                    {# Custom Text (wenn vorhanden) #}
                    <div v-if="previewImg.text" class="sw-cms-el-hero-category-slider__preview-slide-text">
                        {{ previewImg.text }}
                    </div>
                </div>
            </template>
        </div>
        
        {# Navigation Dots #}
        <div class="sw-cms-el-hero-category-slider__preview-dots">
            <span class="sw-cms-el-hero-category-slider__preview-dot sw-cms-el-hero-category-slider__preview-dot--active"></span>
            <span class="sw-cms-el-hero-category-slider__preview-dot"></span>
            <span class="sw-cms-el-hero-category-slider__preview-dot"></span>
        </div>
        
        {# Info: Anzahl Slides & Images per View #}
        <div class="sw-cms-el-hero-category-slider__preview-info">
            <div class="sw-cms-el-hero-category-slider__preview-info-item" v-if="slides.length > 0">
                <strong>{{ slides.length }}</strong> {{ slides.length === 1 ? 'Slide' : 'Slides' }} defined
            </div>
            <div class="sw-cms-el-hero-category-slider__preview-info-item">
                <strong>{{ imageCount }}</strong> Image{{ imageCount === '1' ? '' : 's' }} per View
            </div>
        </div>
    </div>
    
    {# EMPTY STATE - Keine Slides definiert #}
    <div class="sw-cms-el-hero-category-slider__placeholder" v-else>
        <span class="sw-cms-el-hero-category-slider__placeholder-icon">
            <mt-icon name="regular-image" size="24"></mt-icon>
        </span>
        <div class="sw-cms-el-hero-category-slider__placeholder-text">
            {{ $tc('sw-cms.elements.categorySlider.config.noSlides') }}
        </div>
        <div class="sw-cms-el-hero-category-slider__placeholder-hint">
            {{ $tc('sw-cms.elements.categorySlider.config.noSlidesHint') }}
        </div>
    </div>
</div>
{% endblock %}

