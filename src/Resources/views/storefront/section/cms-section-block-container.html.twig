{% sw_extends '@Storefront/storefront/section/cms-section-block-container.html.twig' %}

{% block section_content_block %}
    {# Für hero-block-slider: Entferne Block-Wrapper (cms-block pos-0 cms-block-hero-block-slider position-relative) #}
    {% if block.type == 'hero-block-slider' %}
        {% block section_content_block_hero_slider %}
            {# Direkt Block-Inhalt rendern ohne Block-Wrapper #}
            {% set top = block.marginTop ? block.marginTop : 0 %}
            {% set right = block.marginRight ? block.marginRight : 0 %}
            {% set bottom = block.marginBottom ? block.marginBottom : 0 %}
            {% set left = block.marginLeft ? block.marginLeft : 0 %}

            {% if top or right or bottom or left %}
                {% set padding = top ~ ' ' ~ right ~ ' ' ~ bottom ~ ' ' ~ left %}
            {% endif %}

            {% set blockBgColor = block.backgroundColor %}

            {% set columns = 3 %}
            {% set isInSidebar = block.sectionPosition == 'sidebar' %}
            {% set sidebarClasses = '' %}

            {% if isInSidebar == true %}
                {% set sidebarClasses = 'has--sidebar' %}
            {% endif %}

            {% if block.visibility is null %}
                {% set visibility = {
                    mobile: true,
                    tablet: true,
                    desktop: true
                } %}
            {% else %}
                {% set visibility = block.visibility %}
            {% endif %}

            {# Background Image Handling #}
            {% block section_content_block_hero_slider_background_image %}
                {% if block.backgroundMedia %}
                    {% sw_thumbnails 'cms-block-background' with {
                        media: block.backgroundMedia,
                        autoColumnSizes: false,
                        attributes: {
                            class: 'cms-block-background media-mode--' ~ block.backgroundMediaMode
                        }
                    } %}
                {% endif %}
            {% endblock %}

            {# Container ohne Block-Wrapper #}
            {% block section_content_block_hero_slider_container %}
                <div class="cms-block-container"
                     style="{% if padding %}padding: {{ padding }};{% endif %}{% if blockBgColor %}background-color: {{ blockBgColor }};{% endif %}">
                    {% block section_content_block_hero_slider_row %}
                        <div class="cms-block-container-row row cms-row {{ sidebarClasses }}">
                            {% sw_include '@HeroBlocks/storefront/block/cms-block-' ~ block.type ~ '.html.twig' ignore missing %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        {% endblock %}
    {% else %}
        {# Für alle anderen Blocks: Standard-Verhalten beibehalten #}
        {{ parent() }}
    {% endif %}
{% endblock %}

