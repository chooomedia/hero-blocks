{% block block_hero_block_slider %}
    {% set element = block.slots.getSlot('heroSlider') %}
    {% set columns = 1 %}
    {% set isFullWidth = block.sizingMode == 'full_width' %}

    {# Full-width: Block bricht aus Container aus, keine Padding auf äußerem Wrapper #}
    {% if isFullWidth %}
        {% block block_hero_slider_full_width %}
        {# Full-Width: Breite 100% Body, keine Gutter/Padding, bricht aus Container raus #}
        <div class="col-12 g-0 px-0 hero-slider-full-width" data-cms-element-id="{{ element.id }}">
            {% block block_hero_slider_full_width_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
            {% endblock %}
        </div>
        {% endblock %}
    {% else %}
        {% block block_hero_slider_boxed %}
        {# Boxed: Normale Padding/Gutter (Shopware Standard) #}
        <div class="col-12" data-cms-element-id="{{ element.id }}">
            {% block block_hero_slider_boxed_inner %}
                {% sw_include '@Storefront/storefront/element/cms-element-' ~ element.type ~ '.html.twig' ignore missing %}
            {% endblock %}
        </div>
        {% endblock %}
    {% endif %}
{% endblock %}

